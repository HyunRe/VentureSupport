<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- MapActivity로 이동하는 버튼 -->
    <Button
        android:id="@+id/map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Map Activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="onMapButtonClick" />

    <!-- SchedulerActivity로 이동하는 버튼 -->
    <Button
        android:id="@+id/scheduler_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Scheduler Activity"
        android:layout_below="@id/map_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="onSchedulerButtonClick" />

</RelativeLayout>
